<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.GamerCommunity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gradient_start</item>
        <item name="colorPrimaryDark">@color/dark_background</item>
        <item name="colorAccent">@color/gradient_end</item>
        <item name="android:textColor">@color/white</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Style for common TextViews (titles, subtitles) -->
    <style name="TextViewBaseStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TitleTextStyle" parent="TextViewBaseStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/white</item>

    </style>


    <style name="LinkTextStyle" parent="TextViewBaseStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/neon_blue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ConnectViaTextStyle" parent="TextViewBaseStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/middle</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="QuoteTextStyle" parent="TextViewBaseStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/middle</item>
        <item name="android:textStyle">italic</item>
        <item name="android:alpha">0.8</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
    </style>

    <!-- Style for common EditText fields -->
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/bg_edittext_rounded</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/input_text_color</item>
        <item name="android:textColorHint">@color/input_hint_color</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Style for primary action buttons -->
    <style name="PrimaryButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/bg_button_gradient</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:elevation">8dp</item>
    </style>

    <!-- Style for social media buttons -->
    <style name="SocialButtonStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">12dp</item>
        <item name="android:elevation">3dp</item>
    </style>

    <!-- Style for the main action button with neon effect -->
    <style name="NeonButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_neon_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <!--        <item name="android:fontFamily">@font/press_start_2p</item> &lt;!&ndash; Custom font &ndash;&gt;-->
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item> <!-- Removes default button shadow -->
    </style>

    <style name="CustomInterestChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/chip_bg_image</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/titilliumweb_bold</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/titilliumweb_bold</item> <!-- futuristic font -->
    </style>

    <style name="FilterButtonStyle">x`
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/category_button_bg</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>
    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>