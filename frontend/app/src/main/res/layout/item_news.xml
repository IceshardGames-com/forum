<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_companynews"
    android:padding="16dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Tag like "Meta Quest 3" -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newsSource"
                android:text="Meta"
                android:textColor="#658CC1"
                android:textStyle="bold"
                android:textSize="12sp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/bg_tag_pink"
                android:paddingLeft="8dp"
                android:backgroundTint="#122554"
                android:fontFamily="@font/titilliumweb_semibold"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/newsLabel"
                android:text="Update"
                android:textColor="#85EDAA"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/bg_tag_pink"
                android:backgroundTint="#0D3326"
                android:fontFamily="@font/titilliumweb_semibold"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_toRightOf="@id/topicTag"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:src="@drawable/next"
            android:tint="#658CC1"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>


    <!-- Title -->
    <TextView
        android:id="@+id/newsTitle"
        android:text="Quest 2 gets major update with hand tracking 2.0"
        android:textColor="#D1CFCF"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/titilliumweb_bold"
        android:layout_marginBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Author + replies + time -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/newsTime"
            android:text="1 h ago"
            android:textColor="#6A697A"
            android:layout_marginStart="@dimen/_5sdp"
            android:textSize="10sp"
            android:fontFamily="@font/titilliumweb_raguler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


</LinearLayout>
