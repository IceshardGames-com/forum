<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/dashboard"
            layout="@layout/dashboard_main_content" />

    </RelativeLayout>

    <!-- Right Side Drawer -->
    <LinearLayout
        android:id="@+id/profile_drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/navigationbg"
        android:orientation="vertical"
        android:padding="16dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profile_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:src="@drawable/button_round_background" />

            <ImageView
                android:id="@+id/profile_avatar_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profilepic" />

        </RelativeLayout>



        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/titilliumweb_bold"
            android:text="Username"
            android:textColor="@android:color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/online_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/titilliumweb_semibold"
            android:layout_gravity="center"
            android:text="Online Status: On"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@android:color/holo_green_light"
            android:textSize="14sp" />

        <!-- Menu Items -->
        <ListView
            android:id="@+id/profile_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:divider="#76B0B0B0"
            android:dividerHeight="0.3dp"
            android:layout_weight="1"/>

        <!-- You can add Logout or Settings button at the bottom if needed -->

    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
