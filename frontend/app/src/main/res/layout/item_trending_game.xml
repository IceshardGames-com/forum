<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/bg_gradient_discussion"
    android:layout_marginBottom="@dimen/_10sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/gameImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img1" />

            <TextView
                android:id="@+id/gamePercetage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/bg_tag_pink"
                android:backgroundTint="#C4000000"
                android:fontFamily="@font/titilliumweb_raguler"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="+12%"
                android:textColor="#E6A96A"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/bg_tag_pink"
                android:layout_margin="@dimen/_10sdp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:gravity="center_vertical"
                android:backgroundTint="#C4000000"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@drawable/star"
                    android:layout_centerVertical="true"
                    android:tint="#E6A96A" />

                <TextView
                    android:id="@+id/gameRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/titilliumweb_raguler"
                    android:text="4.9"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:paddingHorizontal="@dimen/_10sdp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/gameTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/titilliumweb_bold"
                android:text="Beat Saber"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/gameGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_tag_pink"
                android:backgroundTint="#2E1747"
                android:fontFamily="@font/titilliumweb_semibold"
                android:paddingHorizontal="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/_4sdp"
                android:text="Rhythm"
                android:layout_centerVertical="true"
                android:textColor="@color/gradient_end"
                android:textSize="@dimen/_9sdp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconuser"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_person"
                android:layout_centerVertical="true"
                android:tint="@color/gradient_end" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toRightOf="@+id/iconuser"
                android:gravity="center_vertical"
                android:text="5.2K players"
                android:textColor="@color/gradient_end"
                android:fontFamily="@font/titilliumweb_semibold"
                android:textSize="@dimen/_10sdp" />

            <ImageView
                android:id="@+id/img_trendinggame_more"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/right"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:tint="@color/gradient_end" />


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>