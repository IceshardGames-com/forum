<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_gradient_companynews"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pinIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_pin"
            android:tint="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/postTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/titilliumweb_bold"
            android:gravity="center_vertical"
            android:text="Post Title"
            android:textColor="@color/white"
            android:textSize="14dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:src="@drawable/ic_person"
            android:tint="#6A697A"/>

        <TextView
            android:id="@+id/postMeta"
            android:text="by User"
            android:textColor="#6A697A"
            android:layout_marginStart="@dimen/_5sdp"
            android:textSize="10sp"
            android:fontFamily="@font/titilliumweb_raguler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:src="@drawable/time"
            android:layout_marginStart="@dimen/_15sdp"
            android:tint="#6A697A"/>

        <TextView
            android:id="@+id/postTime"
            android:text="2h ago"
            android:layout_marginStart="@dimen/_5sdp"
            android:textColor="#6A697A"
            android:textSize="10sp"
            android:fontFamily="@font/titilliumweb_raguler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:src="@drawable/chat"
            android:tint="#6A697A"/>

        <TextView
            android:id="@+id/postReplies"
            android:text="12 replies"
            android:textColor="#6A697A"
            android:textSize="10sp"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/titilliumweb_raguler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:src="@drawable/heart"
            android:layout_marginStart="@dimen/_15sdp"
            android:tint="#6A697A"/>

        <TextView
            android:id="@+id/postLikes"
            android:text="45 likes"
            android:textColor="#6A697A"
            android:textSize="10sp"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/titilliumweb_raguler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>
