<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/bg_gradient_companynews"
    android:orientation="horizontal"
    android:padding="12dp">

    <ImageView
        android:id="@+id/forumImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_gradient_companynews"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/forumTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/titilliumweb_bold"
            android:text="Forum Title"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/forumStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/titilliumweb_semibold"
            android:text="2.5K â€¢ 234 posts"
            android:textColor="#A0A0A0"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/forumLastActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/titilliumweb_raguler"
            android:text="Last: 2 min ago"
            android:textColor="#666666"
            android:textSize="10sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/forumStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/button_round_background"
        android:paddingHorizontal="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="Active"
        android:fontFamily="@font/titilliumweb_bold"
        android:textColor="#ffffff"
        android:textSize="12sp" />
</LinearLayout>
