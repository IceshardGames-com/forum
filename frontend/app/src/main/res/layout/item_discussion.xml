<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_discussion"
    android:padding="16dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Tag like "Meta Quest 3" -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/topicTag"
                android:text="Meta Quest 3"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="12sp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/bg_tag_pink"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:fontFamily="@font/titilliumweb_semibold"
                android:paddingBottom="2dp"
                android:layout_marginBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/newsLabel"
                android:text="Update"
                android:textColor="#C8A4ED"
                android:layout_marginStart="@dimen/_10sdp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/bg_tag_pink"
                android:backgroundTint="#3B1557"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:fontFamily="@font/titilliumweb_semibold"
                android:layout_toRightOf="@id/topicTag"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:src="@drawable/next"
            android:tint="#DE8B92"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>


    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:text="New VR headset meta quest 3 review"
        android:textColor="#D1CFCF"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/titilliumweb_bold"
        android:layout_marginBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Author + replies + time -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:src="@drawable/ic_person"
            android:tint="#6A697A"/>

        <TextView
            android:id="@+id/authorInfo"
            android:text="CyberGamer_X"
            android:textColor="#6A697A"
            android:layout_marginStart="@dimen/_5sdp"
            android:textSize="10sp"
            android:fontFamily="@font/titilliumweb_raguler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:src="@drawable/time"
            android:layout_marginStart="@dimen/_15sdp"
            android:tint="#6A697A"/>

        <TextView
            android:id="@+id/tvTimeAgo"
            android:text="6h ago"
            android:layout_marginStart="@dimen/_5sdp"
            android:textColor="#6A697A"
            android:textSize="10sp"
            android:fontFamily="@font/titilliumweb_raguler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:src="@drawable/chat"
            android:tint="#6A697A"/>

        <TextView
            android:id="@+id/tvReplies"
            android:text="23 replies"
            android:textColor="#6A697A"
            android:textSize="10sp"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/titilliumweb_raguler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:src="@drawable/heart"
            android:layout_marginStart="@dimen/_15sdp"
            android:tint="#6A697A"/>

        <TextView
            android:id="@+id/tvLikes"
            android:text="156"
            android:textColor="#6A697A"
            android:textSize="10sp"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/titilliumweb_raguler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


</LinearLayout>
