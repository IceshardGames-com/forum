<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.OtpScreen.ForgetScreenActivity">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:scaleType="centerCrop"
        android:src="@drawable/bg2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blacktrans" />

    <include
        android:id="@+id/header_start"
        layout="@layout/header_start"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_start">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:outlineSpotShadowColor="@color/darkblue"
                app:cardCornerRadius="@dimen/_100sdp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/circle_gradient"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:contentDescription="Decorative Circle"
                        android:src="@drawable/profile_start"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/circle_gradient_image"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:contentDescription="Decorative Circle"
                        android:src="@drawable/profilepic"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- READY PLAYER ONE? Subtitle -->
            <TextView
                android:id="@+id/tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/header"
                android:text="Forget Password"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_22sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardprofile" />

            <TextView
                android:id="@+id/tv_recover_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:text="Enter your email to receive a password reset link."
                android:textColor="@color/darkgpink"
                android:textSize="10dp"
                android:textAllCaps="true"
                android:fontFamily="@font/titilliumweb_raguler"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_forget_password" />

            <LinearLayout
                android:id="@+id/input_fields_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_blur_border"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_recover_account">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_marginVertical="15dp"
                    android:background="@drawable/input_field_background_purple"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/ic_email"
                        android:tint="@color/darkgpurple" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_email"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:paddingEnd="@dimen/_10sdp"
                        android:fontFamily="@font/titilliumweb_semibold"
                        android:hint="Enter your email"
                        android:inputType="textEmailAddress"
                        android:textColor="@android:color/white"
                        android:textColorHint="@color/hint_gray"
                        android:textSize="14dp" />


                    <ImageView
                        android:id="@+id/img_close"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:visibility="gone"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/cancel_red" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_send_password"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/button_gradient_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/reset_password"
                        android:visibility="gone"
                        android:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/text_spawn_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:letterSpacing="0.08"
                        android:fontFamily="@font/titilliumweb_bold"
                        android:text="Send OTP"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/backToLoginlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_gravity="end"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/btn_verifyOtp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Remember password?"
                        android:fontFamily="@font/titilliumweb_extralight"
                        android:textColor="@color/darkgpurple"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/backToLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Login"
                        android:fontFamily="@font/titilliumweb_raguler"
                        android:textColor="@color/darkgpurple"
                        android:textStyle="bold"
                        android:textSize="10dp"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>