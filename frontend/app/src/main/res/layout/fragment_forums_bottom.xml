<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:scaleType="centerCrop"
        android:src="@drawable/bg2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_background_light" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_blur_border"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_20sdp">

            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titilliumweb_bold"
                android:gravity="center_horizontal"
                android:text="Gamming Communities"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/titilliumweb_semibold"
                android:gravity="center_horizontal"
                android:text="Connect with fellow gamers"
                android:textColor="@color/lightpuple"
                android:textSize="12dp" />

        </LinearLayout>

        <!-- Search Bar -->
        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_gradient_discussion"
            android:drawableStart="@drawable/searchi"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableTint="@color/gradient_end"
            android:hint="Search games..."
            android:padding="12dp"
            android:textSize="@dimen/_12sdp"
            android:paddingStart="@dimen/_10sdp"
            android:fontFamily="@font/titilliumweb_semibold"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Horizontal scroll container -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <!-- Filter Buttons -->
                    <LinearLayout
                        android:id="@+id/filterButtons"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnAllGames"
                            style="@style/FilterButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/titilliumweb_bold"
                            android:paddingLeft="8dp"
                            android:paddingTop="2dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="2dp"
                            android:text="All Games"
                            android:textSize="10dp" />

                        <Button
                            android:id="@+id/btnAction"
                            style="@style/FilterButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/titilliumweb_bold"
                            android:paddingLeft="8dp"
                            android:paddingTop="2dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="2dp"
                            android:text="Action"
                            android:textSize="10dp" />

                        <Button
                            android:id="@+id/btnRhythm"
                            style="@style/FilterButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/titilliumweb_bold"
                            android:paddingLeft="8dp"
                            android:paddingTop="2dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="2dp"
                            android:text="Rhythm"
                            android:textSize="10dp" />

                        <Button
                            android:id="@+id/btnSimulation"
                            style="@style/FilterButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/titilliumweb_bold"
                            android:paddingLeft="8dp"
                            android:paddingTop="2dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="2dp"
                            android:text="Simulation"
                            android:textSize="10dp" />

                        <Button
                            android:id="@+id/btnShooter"
                            style="@style/FilterButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/titilliumweb_bold"
                            android:paddingLeft="8dp"
                            android:paddingTop="2dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="2dp"
                            android:text="Shooter"
                            android:textSize="10dp" />

                        <Button
                            android:id="@+id/btnHorror"
                            style="@style/FilterButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/titilliumweb_bold"
                            android:paddingLeft="8dp"
                            android:paddingTop="2dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="2dp"
                            android:text="Horror"
                            android:textSize="10dp" />

                    </LinearLayout>
                </HorizontalScrollView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/forumRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingTop="12dp"
                    android:paddingBottom="8dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

    <ImageView
        android:id="@+id/fabAddForum"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/plus"
        android:tint="@color/white"
        android:layout_margin="24dp"
        android:padding="@dimen/_15sdp"
        android:background="@drawable/button_round_background" />

</RelativeLayout>

