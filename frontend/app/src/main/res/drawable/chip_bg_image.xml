<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <selector android:layout_width="wrap_content" android:layout_height="wrap_content">
        <item>
            <layer-list>
                <item>
                    <bitmap android:gravity="center" android:src="@drawable/profile" android:tileMode="repeat" />
                </item>
                <item>
                    <shape android:shape="rectangle">
                        <corners android:radius="20dp" />
                    </shape>
                </item>
            </layer-list>
        </item>
    </selector>
</selector>